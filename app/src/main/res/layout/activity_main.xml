<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/main_character_01">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Muddy Day"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="#FFC107"
            android:fontFamily="@font/font1"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp">
                <Button
                    android:id="@+id/bt_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:text="예약">
                </Button>
                <Button
                    android:id="@+id/bt_aiCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:text="AI 도자기 평가"
                    android:layout_marginLeft="10dp">
                </Button>

            </LinearLayout>

            <Button
                android:id="@+id/bt_community"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:text="도자기 커뮤니티 연결 및 도자기 사진 출력"
                android:layout_marginLeft="10dp">
            </Button>

            <!-- 네이버 지도 -->
            <fragment
                android:layout_marginTop="50dp"
                android:id="@+id/map_fragment"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:name="com.naver.maps.map.MapFragment" >
            </fragment>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/bt_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/youtube"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                   >
                </androidx.appcompat.widget.AppCompatImageButton>
                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/bt_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/naver"
                    android:scaleType="centerInside"
                    android:layout_gravity="center">
                </androidx.constraintlayout.utils.widget.ImageFilterButton>
                <androidx.constraintlayout.utils.widget.ImageFilterButton
                    android:id="@+id/bt_naver"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/insta"
                    android:scaleType="centerInside"
                    android:layout_gravity="center">
                </androidx.constraintlayout.utils.widget.ImageFilterButton>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </ScrollView>

</LinearLayout>